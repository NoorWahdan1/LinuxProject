##############################
# DISK & LVM
##############################

# 62. fdisk - Disk partitions
# fdisk -l

# 63. mount - Mount filesystem
# mount /dev/sdb1 /mnt

# 64. umount - Unmount filesystem
# umount /mnt

# 65. fsck - Check filesystem
# fsck /dev/sdb1

# 66. mkfs.xfs - Create XFS
# mkfs.xfs /dev/sdb1

# 67. mkswap - Create swap
# mkswap /dev/sdb2

# 68. swapon - Enable swap
# swapon /dev/sdb2

# 69. swapoff - Disable swap
# swapoff /dev/sdb2

# 70. pvcreate - Create physical volume
# pvcreate /dev/sdb

# 71. vgcreate - Create volume group
# vgcreate vg_data /dev/sdb

# 72. lvcreate - Create logical volume
# lvcreate -L 1G -n lv_data vg_data

# 73. xfs_growfs - Grow XFS
# xfs_growfs /mountpoint

# 74. xfs_repair - Repair XFS
# xfs_repair /dev/sdb1

